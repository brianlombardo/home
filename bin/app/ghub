#!/usr/bin/env bash
set -e

if [[ "$1" == '.' ]]; then shift
  git_url="`git remote -v | head -1 | awk '{print $2}'`"
  if [[ ! "$git_url" ]]; then
    echo 'repo not found'
    exit
  elif echo "$git_url" | grep -q '^git@'; then
    git_url="${git_url//':'/'/'}"; git_url="${git_url//'//'/'/'}"
    git_url="${git_url//'git@'/'https://'}"
  fi
else git_url="${GHUB_URL:-"https://github.com"}"; fi

open "$git_url/$@"
